<% if(typeof questions!='undefined'){%>
  <% if(questions.length===0){%>
    <br/>
    <br/>
    <p style="text-align: center; color: gray; font-weight: bolder; font-size: 1.5rem;">No questions to display</p>
  <%}%>
  <%questions.forEach(question =>{%>
        <div class="card" style="background-color: rgb(146, 202, 255);">
            <div class="card-body">
              <p class="card-text"><%=question.text%></p>
              <h6 class="card-text"><span>Posted on:</span><%=question.created.toLocaleDateString()%></h6>
              <div class="buttonGroup" style="display: flex;">
                <a href="/student/questions/<%=question.id%>" class="btn btn-primary">More</a>
                <!-- Button trigger modal -->
<%if(user.id==question.author.id){%>
  <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
  Delete
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Confirm Deletion</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete the question? All answers and comments related to it would be deleted as well
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <a href="/student/questions/delete/<%=question.id%>" type="button" class="btn btn-danger">Delete</a>
      </div>
    </div>
  </div>
</div>
<%}%>
              </div>
            </div>
          </div>      
          <br/>  
    
<%})}%>
