<%-include('./snavbar')%>
<div class="card">
    <div class="card-body">
      <% var date = question.created%>
      <% date = date.toString()%>
      <p class="card-text"><%=question.text%></p>
      <p class="card-text"><span style="font-weight: bold;">Author: </span><%=question.author.name%></p>
      <p class="card-text"><span style="font-weight: bold;">Submission Time: </span><%=date%></p>
      <div class="like-dislike">
        <button class="btn" id="like-button" data-questionid="<%=question.id%>">
          <i class="far fa-thumbs-up"></i> <span id="like-count"><%=question.likes%></span>
        </button>
      </div>
    </div>
</div> 
<br/>
<div class="container">
    <div class="row">
      <div class="col-7">
        <h5 class="card-text">Answers</h5>
        <%- include('./../partials/answers')%>
      </div>
      <div class="col-5">
          <h6 class="card-text">Comments</h6>
          <%- include('./../partials/comments')%>
      </div>
    </div>
  </div>
  
<script src="js/likeButton.js"></script>

