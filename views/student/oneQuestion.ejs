<%-include('./snavbar')%>
<div class="card">
    <div class="card-body">
      <% var date = question.created%>
      <% date = date.toLocaleString()%>
      <p class="card-text"><%=question.text%></p>
      <p class="card-text"><span style="font-weight: bold;">Author: </span><%=question.author.name%></p>
      <p class="card-text"><span style="font-weight: bold;">Submission Time: </span><%=date%></p>
      <form method="POST" action="/student/questions/rate/<%=question.id%>">
        <label for="Rating">Rate the question(out of 10):</label>
        <input id="rating" name="rating" required="required" type="number" value="<%= typeof rating!='undefined'?rating:''%>"/>
        <button type="submit" class="btn btn-danger btn-sm">Rate</button>
      </form>
    </div>
</div> 
<br/>
<div class="container-fluid">
    <div class="row">
      <div class="col-7">
        <h5 class="card-text">Answers</h5>
        <%- include('./../partials/answers')%>
      </div>
      <div class="col-5">
          <h6 class="card-text">Comments</h6>
          <%- include('./../partials/comments')%>
      </div>
    </div>
  </div>


